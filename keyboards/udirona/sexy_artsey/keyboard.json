{
    "keyboard_name": "sexy artsey",
    "manufacturer": "Gleb",
    "url": "https://gitlab.com/gleb_sexy/",
    "maintainer": "qmk",
    "usb": {
        "vid": "0x7363",
        "pid": "0x1215",
        "device_version": "1.0.0"
    },
    "processor": "RP2040",
    "bootloader": "rp2040",
    "features": {
        "bootmagic": true,
        "command": false,
		"console": false,
        "extrakey": true,
        "mousekey": true,
        "nkro": true
    },
	"rgblight": {
        "led_count": 1,
        "animations": {}
    },
    "ws2812": {
    	"pin": "GP16"
    },
    "qmk": {
        "locking": {
            "enabled": true,
            "resync": true
        }
    },
    "encoder": {
        "rotary": [{
            "pin_a": "GP3",
            "pin_b": "GP2"
        }]
    },
    "diode_direction": "COL2ROW",
    "matrix_pins": {
        "cols": ["GP14", "GP15", "GP26", "GP27"],
        "rows": ["GP8", "GP7", "GP6"]
    },
    "layouts": {
        "LAYOUT_ortho_3x4": {
            "layout": [
                {"x": 0, "y": 0, "matrix": [0, 3]},
                {"x": 1, "y": 0, "matrix": [0, 2]},
                {"x": 2, "y": 0, "matrix": [0, 1]},
                {"x": 3, "y": 0, "matrix": [0, 0]},

                {"x": 0, "y": 1, "matrix": [1, 3]},
                {"x": 1, "y": 1, "matrix": [1, 2]},
                {"x": 2, "y": 1, "matrix": [1, 1]},
                {"x": 3, "y": 1, "matrix": [1, 0]}

                {"x": 0, "y": 2, "matrix": [2, 0]},
                {"x": 1, "y": 2, "matrix": [2, 2]},
                {"x": 2, "y": 2, "matrix": [2, 1]},
                {"x": 3, "y": 2, "matrix": [2, 3]}
            ]
        }
    }
}
